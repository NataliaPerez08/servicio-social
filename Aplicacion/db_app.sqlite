CREATE DATABASE IF NOT EXISTS db_app;

CREATE TABLE IF NOT EXISTS registro_espectros (
    id_regitro INTEGER PRIMARY KEY AUTOINCREMENT,
    carpeta BLOB,
    tabla BLOB,
    espectro BLOB,
    pigmento BLOB,
    aglutinante BLOB,
    base_preparacion BLOB
);


CREATE TABLE IF NOT EXISTS registro_espectro (
    id_espectro INTEGER PRIMARY KEY AUTOINCREMENT,
    wavelenght REAL,
    reflectance REAL,
    FOREIGN KEY (id_espectro) REFERENCES registro_carpeta (carpeta)
);

